
# CITATION file

citHeader("To cite package 'HandyStuff' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)
web <- "github.com/bryanhanson/HandyStuff"

citEntry(entry = "Manual",
	title = "HandyStuff: Stuff that is, Well, Handy.",
	author = personList(as.person("Bryan A. Hanson")),
	year = year,
	note = vers,
	web = web,
	textVersion = paste("Bryan A. Hanson (", year, ") HandyStuff: Stuff that is, well, handy. ",
		vers, ", ", web, sep = ""))
