
# CITATION file

citHeader("To cite package 'HandyStuff' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)
web <- "github.com/bryanhanson/HandyStuff"

citEntry(entry = "Manual",
	title = "Handy Functions & Stuff",
	author = personList(as.person("Bryan A. Hanson")),
	year = year,
	note = vers,
	url = web,
	textVersion = paste("Bryan A. Hanson (", year, ") Handy Functions & Stuff ",
		vers, ", ", web, sep = ""))
